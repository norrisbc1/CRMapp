@page
@model crmapp.Pages.Customers.Index
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-3">List of Customers</h2>

<a class="btn btn-primary mb-3" href="/Customers/Create">New Customer</a>

<table class="table">
    <thread>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Company</th>
            <th>Notes</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thread>
    <tbody>
        @foreach(var customer in Model.CustomersList) {
            <tr>
                <td>@customer.ID</td>
                <td>@(customer.Firstname + " " + customer.Lastname)</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>@customer.Company</td>
                <td>@customer.Notes</td>
                <td>@customer.CreatedAt</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Customers/Edit?id=@customer.ID">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/Customers/Delete?id=@customer.ID">Delete</a>
                </td>
            </tr>
        }

    
    </tbody>
</table>